{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
    <div class="container my-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h1 class="h3 mb-0">Modifier mon profil</h1>
                    </div>
                    <div class="card-body">
                        {{ form_start(profileForm) }}
                            <div class="mb-3">
                                {{ form_label(profileForm.email) }}
                                {{ form_widget(profileForm.email) }}
                                {{ form_errors(profileForm.email) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(profileForm.firstName) }}
                                {{ form_widget(profileForm.firstName) }}
                                {{ form_errors(profileForm.firstName) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(profileForm.lastName) }}
                                {{ form_widget(profileForm.lastName) }}
                                {{ form_errors(profileForm.lastName) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(profileForm.newPassword) }}
                                {{ form_widget(profileForm.newPassword) }}
                                {{ form_errors(profileForm.newPassword) }}
                                <small class="form-text text-muted">Laissez vide si vous ne souhaitez pas changer de mot de passe</small>
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="{{ path('profile_index') }}" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Retour
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Enregistrer
                                </button>
                            </div>
                        {{ form_end(profileForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}