{% extends 'base.html.twig' %}

{% block title %}Nouveau Produit{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h1 class="h3 mb-3 font-weight-normal">Créer un nouveau produit</h1>

                    {{ form_start(productForm) }}
                    <div class="mb-3">
                        {{ form_row(productForm.name) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(productForm.description) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(productForm.price) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(productForm.imageUrl) }}
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('product_index') }}" class="btn btn-secondary">Retour à la liste</a>
                        <button type="submit" class="btn btn-primary">Créer</button>
                    </div>
                    {{ form_end(productForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}