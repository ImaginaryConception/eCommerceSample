{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h1 class="h3 mb-3 font-weight-normal text-center">Inscription</h1>

                    {{ form_start(registrationForm, {'attr': {'class': 'needs-validation'}}) }}
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(registrationForm.firstName) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(registrationForm.lastName) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(registrationForm.email) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(registrationForm.address) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(registrationForm.plainPassword) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(registrationForm.agreeTerms) }}
                    </div>

                    <button type="submit" class="btn btn-primary w-100">S'inscrire</button>
                    {{ form_end(registrationForm) }}

                    <div class="mt-3 text-center">
                        <p>Déjà inscrit ? <a href="{{ path('app_login') }}">Connectez-vous</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}